	<uninstall for="1.1 - 1.1.99">
		<modification type="file" reverse="true">OneallSocialLogin.modification.xml</modification>
		<modification type="file" reverse="true">OneallSocialLogin.language.xml</modification>
	</uninstall>
	
</package-info>